using System;
namespace ex1
{
class Program
{
static void Main(string[] args)
{
Console.Write("Вкажiть кiлькiсть елементiв масиву: "); //відображення тексту у консолі
int n = int.Parse(Console.ReadLine()); //зчитування введених даних та перетворення у числове значення
int[] Arrey = new int[n]; //задан масив
for (int i = 0; i < n; i++) //цикл введення масиву
{
Console.Write(" Введiть " + (i + 1) + " елемент масиву:"); //відображення тексту у консолі
Arrey[i] = int.Parse(Console.ReadLine()); //зчитування введених даних та перетворення у числове значення
}
Console.WriteLine(); //нова строка 
for (int i = 0; i < n; i++) //цикл виведення масиву
{
Console.Write(Arrey[i] + " "); //виведення масиву у строку з відступом
}
Console.WriteLine(); //нова строка 
//пошук мінімального значення масиву
int min, max; //введення змінних
min = Arrey[0]; //так вказано, бо не відомо яке значення може бути у масиві
max = Arrey[0];
double sum = 0; //необхідно для середнього
double avr; //бо воно може бути не ціле
for (int i = 0; i < n; i++) //цикл перевірки значень
{
if (Arrey[i] < min) //пошук найменьшого значення
{
min = Arrey[i]; //присвоєння значення с масиву змінній
}
}
Console.WriteLine("мiнiмальне значення масиву: "+ min);
//пошук максимального значення масиву
for (int i = 0; i < n; i++) //цикл перевірки значень
{
if (Arrey[i] > max) //пошук найбільшого значення
{
max = Arrey[i]; //присвоєння
}
}
Console.WriteLine("максимальне значення масиву: " + max);
for (int i = 0; i < n; i++) //цикл складання значень 
{
sum = sum + Arrey[i]; //складання
}
avr = sum / n; //знаходження середнього
Console.WriteLine("сума значень масиву: " + sum); //виведення на консоль суми
Console.WriteLine("середнє значення масиву: " + avr); //виведення на консоль сер.зн.
}
}
}
