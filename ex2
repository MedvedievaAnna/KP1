using System;
namespace ex2
{
class Program
{
static void Main(string[] args)
{
// Введення двовимірного масиву з випадковими значеннями у діапазоні
Random r = new Random(); //визначення випадкової змінної
int[,] mas = new int[6, 8]; //визначення двовимірного масиву та розміру
for (int i = 0; i < 6; i++) //цикл задання масиву
{
for (int j = 0; j < 8; j++)
{
mas[i, j] = r.Next(10,99); //присвоєння масиву випадкового значення у діапазоні 10÷99
Console.Write(mas[i, j] + " "); //відображення у консолі значення масиву
}
Console.WriteLine();
{
Console.ReadKey(true); //початок виконання нового построкового циклу після натиснення вводу 
}
}
//визначення середнього построкового значення масиву
double[] mas2 = new double[6]; //визнаячення одновимірного масиву та розміру (значення можуть бути не цілими)
for (int i = 0; i < 6; i++) //цикл задання масиву
{
double sum = 0; //майбутня сума рядків
double avr = 0; //майбутнє середнє значення 
for (int j = 0; j < 8; j++)
{
sum = sum + mas[i, j]; //складення значень рядка
}
avr = sum / 8; //визначення середнього арифметичного 
mas2[i] = avr; //задання значень масиву з середніх арифметичних
Console.Write(mas2[i] + " "); //перевірка масиву
Console.WriteLine(" ");
Console.WriteLine("Середнє арифметичне " + (i+1) +" рядка " + avr); //виведення на консоль номеру строки та сер. значення
{
Console.ReadKey(true); //початок вконання нового построкового циклу після натиснення вводу
}
}
//визначення номеру строки з максимальним остннім вхідним та першим мінімальним вхідним середнім арифметичним
int max, min;
max = 0; //номер рядка
min = 0; //номер рядка
double m1 = 0; //значення в масиві
for (int i = 0; i < 6; i++)
{
if (mas2[i] >= m1) //якщо значення цифри у масиві більше чи дорівнює змінній, то змінна заміщується на нього
{
m1 = mas2[i]; //присвоюємо змінній нове значення з масиву
max = i; //присвоюємо значенню номер рядка
}
}
Console.WriteLine("№ рядка з бiльшим ср. значенням "+ (max+1));
//визначення номеру рядка з мінімальним першим вхідним 
for (int i = 0; i < 6; i++)
{
if (mas2[i] < m1) //якщо значення цифри у масиві меньше змінної, то змінна заміщується на нього без рівності, бо необхідна перша вхідна
{
m1 = mas2[i];
min = i; //присвоюємо значенню номер рядка
}
}
Console.WriteLine("№ рядка з меньшим ср. значенням " + (min+1));
//заміна місцеположення рядків масиву
int temp = 0;
for (int j = 0; j < 8; j++) //цикл перебору строкових елементів масиву
{
temp = mas[max, j]; //зберігаємо значення рядка
mas[max, j] = mas[min, j]; //замінюємо збережений рядок на новий
mas[min, j] = temp; //замінюємо збереженим значенням інший рядок
}
//виведення на консоль нового масиву після перестановки рядків
Console.WriteLine("Новий масив пiсля замiни мiсцями рядків");
for (int i = 0; i < 6; i++) //перебір значень рядка
{
for (int j = 0; j < 8; j++) //перебір значень стовпця
{
Console.Write(mas[i, j] + " "); //відображення значення масиву
}
Console.WriteLine(); //перехід на новий рядок
{
Console.ReadKey(true); //початок виконання нового построкового циклу після натиснення вводу
}
}
}
}
}
